.banner
  width: 100%
  padding: 0 0 10px
  background: url("../../../img/banner_img/bg_large.png") no-repeat center;
  -webkit-background-size: cover
  background-size: cover
  &__header
    font-size: 30px;
    font-weight: 400;
    text-align: left;
    color: #fff;
    margin-top: 16px;
    line-height: 38px;
  &__text
    font-size: 21px;
    margin-top: 10px;
    font-weight: 300;
    color: #fff;
  &__btn
    font-size: 22px
    font-weight: 500
    color: #fff
    display: block
    padding: 10px 0
    text-align: center
    width: 265px
    margin: 16px 0 20px 0
    border-radius: 40px
    background-image: -webkit-linear-gradient(315deg,#f9b85d 0%,#dc2562 130%)
    background-image: linear-gradient(135deg,#f9b85d 0%,#dc2562 130%)
    &:focus
      outline: 0;
      text-decoration: none
      color: #fff
    &:hover
      text-decoration: none
      color: #ffffff
      opacity: 0.95
      font-weight: 500
@media (max-width: 992px)
  .xs-width
    width: 100%
  .banner
    background-size: cover;
    background-position: 53% 0;
    &__text
      font-size: 18px
      margin: 14px 0
@media (max-width: 880px)
  .banner
    &__header
      font-size: 24px
      line-height: 1.5
    &__text
      font-size: 17px
@media (max-width: 767px)
  .banner
    background: url("../../../img/banner_img/bg_small.jpg") no-repeat center
    background-size: cover
    padding: 0 0 25px
    &__header
      text-align: center
    &__text
      text-align: center
    &__btn
      margin: 0 auto
  .img-wrap
    margin: 0 auto
    width: 200px